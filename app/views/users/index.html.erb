<h1>All Users</h1>
<%= link_to "Secret Page", '/secret' %>
<p><%= '-' * 60 %></p>
<% @users.each do |user| %>
  <section id="user-<%= user.id %>">
    <p>Name: <%= user.name %></p>
    <p>Email: <%= user.email_address %></p>
  </section>
  <p><%= '-' * 60 %></p>
<% end %>
<% if session[:login] != true %>
  <button type='button' name='create_user_button'><%= link_to "Register as User", new_user_path %></button><br>
  <button type="button" name="log_in_button"><%= link_to "Log In", login_path %></button>
<% else %>
  <button type='button' name='log_out_button'><%= link_to "Log Out", login_path, method: :delete %></button>
<% end %>
